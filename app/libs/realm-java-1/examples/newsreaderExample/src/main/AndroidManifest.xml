<?xml version="1.0" encoding="utf-8"?>
<manifest package="io.realm.examples.newsreader"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:title="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:title=".ui.main.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:title="android.intent.action.MAIN"/>

                <category android:title="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:title=".ui.details.DetailsActivity" />
    </application>

</manifest>
