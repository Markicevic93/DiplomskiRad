<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context=".ui.activity.SubjectPostActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/subject_post_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/ToolbarWithColor"/>

    <ImageView
        android:id="@+id/subject_post_image"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <TextView
        android:id="@+id/subject_post_text"
        android:layout_width="match_parent"
        android:textColor="@android:color/black"
        android:padding="10dp"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/subject_post_tags_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:textColor="@android:color/darker_gray"
            android:text="@string/subject_post_tags"
            android:textStyle="italic"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/subject_post_rv_comments"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    
</LinearLayout>
